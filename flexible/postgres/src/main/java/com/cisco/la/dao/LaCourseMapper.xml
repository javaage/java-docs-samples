<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cisco.la.dao.LaCourseDao">
    <!-- LaCourse的resultMap,column是给数据库列起的别名,它对应property类的属性-->
    <resultMap id="result_LaCourse_Map" type="com.cisco.la.entity.LaCourse">
        <id column="crs_id" property="crsId" />
        <result column="crs_name" property="crsName" />
        <result column="crs_enddate" property="crsEnddate" />
        <result column="crs_startdate" property="crsStartdate" />
        <result column="crs_active" property="crsActive" />
        <result column="crs_price" property="crsPrice" />
    </resultMap>

	   <!-- Assist用于辅助工具类setRequires设置的条件,${req.require}表示列名,#{req.value}表示值它是防SQL注入的 -->
    <sql id="Assist">
        <where>
            <foreach collection="require" item="req" separator=" ">
                ${req.require} 
                <if test="req.value != null"> #{req.value}</if> 
                <if test="req.values != null">
                    <foreach collection="req.values" item="val" separator=","> 
                        #{val} 
                    </foreach> 
                </if> 
                <if test="req.suffix != null"> ${req.suffix}</if> 
            </foreach>
        </where>
    </sql>

	   <!-- updateAssist用于更新数据的使用它拓展自Assist,用于辅助工具类setRequires设置的条件,${req.require}表示列名,#{req.value}表示值它是防SQL注入的 -->
    <sql id="updateAssist">
        <where>
            <foreach collection="assist.require" item="req" separator=" ">
                ${req.require} 
                <if test="req.value != null"> #{req.value}</if> 
                <if test="req.values != null">
                    <foreach collection="req.values" item="val" separator=","> 
                        #{val} 
                    </foreach> 
                </if> 
                <if test="req.suffix != null"> ${req.suffix}</if> 
            </foreach>
        </where>
    </sql>

    <!-- 数据库中表名为:la_course的列名,as前是数据库的列明,as后是列的别名用于映射成实体类中的属性,需要注意的是别名必须与resultMap中的column别名一致 -->
    <sql id="la_course_Column">
        la_course.crs_id as crs_id
        ,la_course.crs_name as crs_name
        ,la_course.crs_enddate as crs_enddate
        ,la_course.crs_startdate as crs_startdate
        ,la_course.crs_active as crs_active
        ,la_course.crs_price as crs_price
    </sql>

    <!--获得类名为:LaCourse对应的数据库表的数据总行数 -->
    <select id="getLaCourseRowCount" parameterType="com.cisco.la.common.Assist" resultType="java.lang.Long">
        select count(crs_id) from la_course
        <if test="require!=null"><include refid="Assist" /></if>
    </select>
    <!-- 获得类名为:LaCourse对应数据库中表的数据集合 -->
    <select id="selectLaCourse" parameterType="com.cisco.la.common.Assist"  resultMap="result_LaCourse_Map">
        select  <if test="distinct !=null">${distinct}</if>
        <choose>
            <when test="resultColumn!=null">${resultColumn}</when>
            <otherwise>
        <include refid="la_course_Column" /> 
            </otherwise>
        </choose>
        from la_course
        <if test="require!=null"><include refid="Assist" /></if>
        <if test="order !=null">${order}</if>
        <if test="rowSize !=null"> LIMIT #{rowSize} <if test="startRow !=null"> OFFSET #{startRow}</if></if>
    </select> 

    <!-- 获得一个LaCourse对象,以参数LaCourse对象中不为空的属性作为条件进行查询-->
    <select id="selectLaCourseByObj" parameterType="com.cisco.la.entity.LaCourse" resultMap="result_LaCourse_Map">
        select 
            <include refid="la_course_Column" /> 
        from la_course
        <where>
            <if test="crsPrice != null "> and la_course.crs_price = #{crsPrice}</if>
            <if test="crsActive != null "> and la_course.crs_active = #{crsActive}</if>
            <if test="crsStartdate != null "> and la_course.crs_startdate = #{crsStartdate}</if>
            <if test="crsEnddate != null "> and la_course.crs_enddate = #{crsEnddate}</if>
            <if test="crsName != null "> and la_course.crs_name = #{crsName}</if>
            <if test="crsId != null "> and la_course.crs_id = #{crsId}</if>
        </where>
    </select> 

    <!-- 通过LaCourse的id获得对应数据库中表的数据对象-->
    <select id="selectLaCourseById" parameterType="java.lang.Object" resultMap="result_LaCourse_Map">
        select 
            <include refid="la_course_Column" /> 
        from la_course
        where la_course.crs_id = #{id}
    </select> 

    <!-- 将LaCourse插入到对应数据库的表中,包括属性值为null的数据-->

    <insert id="insertLaCourse" parameterType="com.cisco.la.entity.LaCourse">
        insert into la_course(crs_id,crs_name,crs_enddate,crs_startdate,crs_active,crs_price) 
        values(#{crsId},#{crsName},#{crsEnddate},#{crsStartdate},#{crsActive},#{crsPrice})
    </insert>

    <!-- 将LaCourse中属性值不为null的数据,插入到对应数据库的表中-->
    <insert id="insertNonEmptyLaCourse" parameterType="com.cisco.la.entity.LaCourse">
        insert into la_course
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="crsId != null">crs_id,</if>
            <if test="crsName != null">crs_name,</if>
            <if test="crsEnddate != null">crs_enddate,</if>
            <if test="crsStartdate != null">crs_startdate,</if>
            <if test="crsActive != null">crs_active,</if>
            <if test="crsPrice != null">crs_price,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="crsId != null"> #{crsId},</if>
            <if test="crsName != null"> #{crsName},</if>
            <if test="crsEnddate != null"> #{crsEnddate},</if>
            <if test="crsStartdate != null"> #{crsStartdate},</if>
            <if test="crsActive != null"> #{crsActive},</if>
            <if test="crsPrice != null"> #{crsPrice},</if>
        </trim>
    </insert>

    <!-- 将LaCourse批量插入到对应数据库的表中-->
    <insert id="insertLaCourseByBatch" parameterType="ArrayList">
        insert into la_course(crs_id,crs_name,crs_enddate,crs_startdate,crs_active,crs_price) values
        <foreach collection="list" item="item" index="index" separator="," >
            (#{item.crsId},#{item.crsName},#{item.crsEnddate},#{item.crsStartdate},#{item.crsActive},#{item.crsPrice})
        </foreach>
    </insert>

    <!-- 通过LaCourse的id将数据库表中对应的数据删除-->
    <delete id="deleteLaCourseById" parameterType="java.lang.Object">
        delete from la_course
        where crs_id = #{id}
    </delete>

    <!-- 通过辅助工具Assist中的条件将LaCourse对应的数据库表的数据删除-->
    <delete id="deleteLaCourse" parameterType="com.cisco.la.common.Assist">
        delete from la_course
        <if test="require!=null"><include refid="Assist" /></if>
    </delete>

    <!-- 通过LaCourse的id将LaCourse的数据更新到数据库中对应的表,包括值null的数据-->
    <update id="updateLaCourseById" parameterType="com.cisco.la.entity.LaCourse">
        update la_course set
            crs_name=#{crsName}
            ,crs_enddate=#{crsEnddate}
            ,crs_startdate=#{crsStartdate}
            ,crs_active=#{crsActive}
            ,crs_price=#{crsPrice}
        where crs_id=#{crsId}
    </update>

    <!-- 通过LaCourse的id将LaCourse中属性值不为null的数据更新到数据库对应的表中-->
    <update id="updateNonEmptyLaCourseById" parameterType="com.cisco.la.entity.LaCourse">
        update la_course
        <set>
            <if test="crsName != null">
                crs_name=#{crsName},
            </if>
            <if test="crsEnddate != null">
                crs_enddate=#{crsEnddate},
            </if>
            <if test="crsStartdate != null">
                crs_startdate=#{crsStartdate},
            </if>
            <if test="crsActive != null">
                crs_active=#{crsActive},
            </if>
            <if test="crsPrice != null">
                crs_price=#{crsPrice},
            </if>
        </set>
        where crs_id=#{crsId}
    </update>

    <!-- 通过辅助工具Assist中的条件将LaCourse中的数据更新到数据库对应的表中,包括值为null的数据-->
    <update id="updateLaCourse" parameterType="map">
        update la_course
        <set>
                crs_id=#{enti.crsId},
                crs_name=#{enti.crsName},
                crs_enddate=#{enti.crsEnddate},
                crs_startdate=#{enti.crsStartdate},
                crs_active=#{enti.crsActive},
                crs_price=#{enti.crsPrice},
        </set>
        <if test="assist.require!=null"><include refid="updateAssist" /></if>
    </update>

    <!-- 通过辅助工具Assist中的条件将LaCourse中属性值不为null的数据更新到数据库对应的表中-->
    <update id="updateNonEmptyLaCourse" parameterType="map">
        update la_course
        <set>
            <if test="enti.crsId != null">
                crs_id=#{enti.crsId},
            </if>
            <if test="enti.crsName != null">
                crs_name=#{enti.crsName},
            </if>
            <if test="enti.crsEnddate != null">
                crs_enddate=#{enti.crsEnddate},
            </if>
            <if test="enti.crsStartdate != null">
                crs_startdate=#{enti.crsStartdate},
            </if>
            <if test="enti.crsActive != null">
                crs_active=#{enti.crsActive},
            </if>
            <if test="enti.crsPrice != null">
                crs_price=#{enti.crsPrice},
            </if>
        </set>
        <if test="assist.require!=null"><include refid="updateAssist" /></if>
    </update>

</mapper>